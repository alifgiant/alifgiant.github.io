---
layout: layouts/base.njk
title: Tools
permalink: /tools/
---

<div class="w-full max-w-[1400px] flex flex-col gap-12" x-data>
    {# Header #}
    <div class="flex flex-col gap-4">
        <h1 class="text-5xl md:text-7xl font-bold text-text-main font-display">
            {{ site.pages.tools.title }}
        </h1>
        <p class="text-xl text-text-muted max-w-2xl leading-relaxed">
            {{ site.pages.tools.subtitle }}
        </p>
    </div>

    {# Tools Grid #}
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {% for tool in site.pages.tools.list %}
        <a href="{{ tool.url }}" class="group relative flex flex-col min-h-[320px] bg-white rounded-[2.5rem] p-8 overflow-hidden border border-white shadow-xl shadow-primary/5 hover:shadow-2xl hover:shadow-primary/15 transition-all duration-500 hover:-translate-y-2">
            <div class="absolute top-8 right-8 bg-[#F5EFEB] rounded-full p-3 opacity-0 translate-y-4 group-hover:opacity-100 group-hover:translate-y-0 transition-all duration-500 ease-out z-20">
                <span class="material-symbols-outlined text-text-main">north_east</span>
            </div>
            
            <div class="relative z-10">
                <div class="inline-flex items-center gap-2 px-3 py-1 rounded-full bg-stone-100 text-stone-600 text-xs font-bold uppercase tracking-wider mb-6 border border-stone-200">
                    <span class="material-symbols-outlined text-sm">{{ tool.icon }}</span>
                    {{ tool.tag }}
                </div>
                <h2 class="text-3xl font-bold text-text-main mb-3 group-hover:text-primary transition-colors font-display">
                    {{ tool.title }}
                </h2>
                <p class="text-text-muted text-base leading-relaxed">
                    {{ tool.description }}
                </p>
            </div>
            
            {# Background decorative element #}
            <div class="absolute -bottom-12 -right-12 w-48 h-48 bg-primary/5 rounded-full blur-[40px] group-hover:bg-primary/10 transition-all duration-700"></div>
        </a>
        {% endfor %}
    </div>
</div>
