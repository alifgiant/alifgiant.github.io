{
    "name": "alifgiant-portfolio",
    "version": "1.0.0",
    "description": "Personal portfolio static site",
    "scripts": {
        "dev": "npx tailwindcss -i src/styles/input.css -o assets/main.css --watch & npx @11ty/eleventy --serve",
        "build": "npm run build:css && npx @11ty/eleventy",
        "build:css": "npx tailwindcss -i src/styles/input.css -o assets/main.css --minify",
        "watch:css": "npx tailwindcss -i src/styles/input.css -o assets/main.css --watch",
        "fetch-content": "node scripts/fetch-notion-blogs.js && node scripts/fetch-notion-experience.js",
        "pages:dev": "npx wrangler pages dev _site",
        "pages:deploy": "npx wrangler pages deploy _site"
    },
    "devDependencies": {
        "@11ty/eleventy": "^3.0.0",
        "autoprefixer": "^10.4.23",
        "fs-extra": "^11.3.3",
        "globby": "^16.1.0",
        "imagemin": "^9.0.1",
        "imagemin-svgo": "^11.0.1",
        "markdown-it": "^14.0.0",
        "markdown-it-multimd-table": "^4.0.0",
        "postcss": "^8.5.6",
        "sharp": "^0.34.5",
        "tailwindcss": "^3.4.13"
    }
}
