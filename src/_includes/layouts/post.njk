---
layout: layouts/base.njk
---

{# Article Header #}
<section class="w-full max-w-4xl flex flex-col gap-8 mb-12 animate-fade-in">
    <div class="flex items-center gap-3 text-sm font-medium text-primary uppercase tracking-wider">
        <span>Blog</span>
        <span class="text-stone-300">â€¢</span>
        <span>{{ date | formatDate }}</span>
    </div>
    <h1 class="text-5xl md:text-6xl lg:text-7xl font-display font-bold text-text-main leading-[1.1] tracking-tight">
        {{ title }}
    </h1>
    {% if tags %}
        <div class="flex flex-wrap gap-2 mt-6">
            {% for tag in tags %}
                {% if tag != 'posts' %}
                    <span class="px-3 py-1 rounded-full bg-primary/5 border border-primary/10 text-xs font-bold text-primary uppercase tracking-wider">{{ tag }}</span>
                {% endif %}
            {% endfor %}
        </div>
    {% endif %}
    <div class="flex items-center justify-between border-b border-stone-200 pb-8 mt-6">
        <div class="flex items-center gap-4">
            <div class="size-12 rounded-full bg-stone-200 flex items-center justify-center text-xl font-bold font-display text-primary">
                MA
            </div>
            <div class="flex flex-col">
                <span class="text-sm font-bold text-text-main">{{ site.name }}</span>
                <span class="text-xs text-text-muted">{{ site.title }}</span>
            </div>
        </div>
        <div class="flex items-center gap-2 text-text-muted text-sm">
            <span class="material-symbols-outlined text-[18px]">schedule</span>
            {{ readTime or (content | readingTime) }}
        </div>
    </div>
</section>

{# Featured Image #}
{% if image %}
    <div class="w-full max-w-6xl h-[400px] md:h-[600px] rounded-2xl md:rounded-3xl overflow-hidden shadow-2xl shadow-stone-900/10 mb-20 relative">
        <img alt="{{ title }}" class="w-full h-full object-cover" src="{{ image }}" />
        <div class="absolute inset-0 bg-gradient-to-t from-stone-900/30 to-transparent"></div>
    </div>
{% endif %}

{# Article Content #}
<div class="w-full max-w-[1400px] grid grid-cols-1 lg:grid-cols-12 gap-12 lg:gap-24">
    {# Main content #}
    <article class="col-span-1 lg:col-span-9 blog-content">
        {% if description %}
            <p class="lead text-xl md:text-2xl font-display font-medium text-text-main mb-10 leading-relaxed">
                {{ description }}
            </p>
        {% endif %}
        
        {{ content | safe }}
    </article>
    
    {# Sidebar #}
    <aside class="hidden lg:block lg:col-span-3">
        <div class="sticky top-32 flex flex-col gap-10">
            {# Table of contents placeholder #}
            {% if toc %}
                <div class="flex flex-col gap-4">
                    <h5 class="font-display font-bold text-sm uppercase tracking-widest text-text-muted">On this page</h5>
                    <nav class="flex flex-col gap-3 border-l-2 border-stone-200 pl-4">
                        {% for item in toc %}
                            <a class="text-sm font-medium text-text-muted hover:text-text-main transition-all" href="#{{ item.id }}">{{ item.title }}</a>
                        {% endfor %}
                    </nav>
                </div>
            {% endif %}
            
            {# Read Next #}
            <div class="flex flex-col gap-4 mt-8">
                <h5 class="font-display font-bold text-sm uppercase tracking-widest text-text-muted">Read Next</h5>
                {# Try to get the next (older) post first #}
                {% set nextPost = collections.posts | getNextCollectionItem(page) %}
                
                {# If no older post, try to get the previous (newer) post #}
                {% if not nextPost %}
                    {% set nextPost = collections.posts | getPreviousCollectionItem(page) %}
                {% endif %}

                {# Fallback to the first post in the collection if still null (shouldn't happen unless only 1 post) #}
                {% if not nextPost and collections.posts.length > 1 %}
                    {% if collections.posts[0].url != page.url %}
                        {% set nextPost = collections.posts[0] %}
                    {% else %}
                        {% set nextPost = collections.posts[1] %}
                    {% endif %}
                {% endif %}

                {% if nextPost %}
                    <a class="group block bg-white rounded-2xl p-4 shadow-lg shadow-stone-200/50 hover:shadow-xl hover:shadow-primary/10 hover:-translate-y-1 transition-all duration-300 border border-stone-100"
                       href="{{ nextPost.url }}">
                        <div class="aspect-video w-full rounded-xl bg-stone-100 mb-4 overflow-hidden relative">
                            {% if nextPost.data.image %}
                                <img alt="{{ nextPost.data.title }}" class="w-full h-full object-cover" src="{{ nextPost.data.image }}" />
                            {% endif %}
                            <div class="absolute inset-0 bg-primary/10 group-hover:bg-primary/20 transition-colors"></div>
                        </div>
                        <h4 class="font-bold text-text-main leading-tight group-hover:text-primary transition-colors">
                            {{ nextPost.data.title }}
                        </h4>
                    </a>
                {% endif %}
            </div>
        </div>
    </aside>
</div>



{# Mermaid Support #}
<script src="https://cdn.jsdelivr.net/npm/mermaid@10/dist/mermaid.min.js"></script>
<script>
    mermaid.initialize({
        startOnLoad: true,
        theme: 'base',
        themeVariables: {
            primaryColor: '#3b82f6',
            primaryTextColor: '#fff',
            primaryBorderColor: '#2563eb',
            lineColor: '#94a3b8',
            secondaryColor: '#f8fafc',
            tertiaryColor: '#f1f5f9',
            fontFamily: 'Inter, sans-serif'
        }
    });

    // Handle mermaid blocks rendered by Markdown-it
    document.addEventListener('DOMContentLoaded', () => {
        // Find all mermaid blocks
        document.querySelectorAll('pre.language-mermaid').forEach(pre => {
            const code = pre.querySelector('code');
            if (code) {
                const div = document.createElement('div');
                div.className = 'mermaid my-12 flex justify-center bg-white p-8 rounded-3xl border border-stone-100 shadow-sm overflow-x-auto';
                div.textContent = code.textContent;
                pre.replaceWith(div);
            }
        });
        mermaid.init();
    });
</script>

<style>
    .mermaid svg {
        max-width: 100%;
        height: auto;
    }

    /* Blog Content Styling Improvements */
    .blog-content p {
        margin-bottom: 1rem;
        line-height: 1.75;
    }

    /* Lists should have proper spacing */
    .blog-content ul {
        list-style-type: disc;
        margin-top: 0.5rem;
        margin-bottom: 1rem;
        padding-left: 1.5rem;
    }

    .blog-content ol {
        list-style-type: decimal;
        margin-top: 0.5rem;
        margin-bottom: 1rem;
        padding-left: 1.5rem;
    }

    .blog-content li {
        margin-bottom: 0.25rem;
        line-height: 1.7;
    }

    /* Nested lists */
    .blog-content li > ul,
    .blog-content li > ol {
        margin-top: 0.25rem;
        margin-bottom: 0.25rem;
    }

    /* Headings spacing */
    .blog-content h1, .blog-content h2, .blog-content h3, .blog-content h4 {
        margin-top: 1.75rem;
        margin-bottom: 0.75rem;
    }

    /* First heading after lead paragraph */
    .blog-content .lead + h1,
    .blog-content .lead + h2,
    .blog-content .lead + h3 {
        margin-top: 1rem;
    }

    .blog-content img {
        border-radius: 1.5rem;
        margin: 1.5rem auto;
        display: block;
        max-width: 100%;
        height: auto;
        box-shadow: 0 10px 30px -10px rgba(0,0,0,0.1);
    }

    /* Table Styling */
    .blog-content table {
        width: 100%;
        border-collapse: collapse;
        margin: 1.5rem 0;
        font-size: 0.95rem;
        background: white;
        border-radius: 1rem;
        overflow: hidden;
        border: 1px solid #e5e7eb;
    }

    .blog-content th, 
    .blog-content td {
        border: 1px solid #e5e7eb;
        padding: 1rem 1.25rem;
        text-align: left;
    }

    .blog-content th {
        background-color: #f9fafb;
        font-weight: 700;
        color: var(--text-main);
    }

    .blog-content tr:nth-child(even) {
        background-color: #fcfcfc;
    }

    /* Notion Column Layout */
    .blog-content .notion-columns {
        display: flex;
        gap: 1.5rem;
        margin: 2rem 0;
        flex-wrap: wrap;
    }

    .blog-content .notion-column {
        flex: 1 1 300px;
        min-width: 0;
    }

    .blog-content .notion-column pre {
        margin: 0;
    }

    @media (max-width: 768px) {
        .blog-content .notion-columns {
            flex-direction: column;
        }
        
        .blog-content .notion-column {
            width: 100%;
        }
    }

    /* Notion Caption Styling */
    .blog-content .notion-caption {
        display: block;
        text-align: center;
        color: #6b7280;
        font-size: 0.875rem;
        font-style: italic;
        margin-top: -1.5rem;
        margin-bottom: 2rem;
    }

    /* Caption after code blocks needs different margin */
    .blog-content pre + .notion-caption {
        margin-top: 0.5rem;
    }
</style>
