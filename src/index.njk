---
layout: layouts/base.njk
title: Home
permalink: /
---

{# Hero Section - centered vertically on desktop #}
<section class="w-full max-w-[1400px] flex flex-col relative mb-16 lg:mb-32" x-data>
    <div class="flex flex-col relative z-10">
        {# Large background text #}
        <h1 class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-full text-center text-[18vw] leading-[0.8] font-bold tracking-tighter text-primary/5 pointer-events-none select-none -z-10 blur-[2px] mix-blend-multiply font-display">
            MUHAMMAD<br/>ALIF<br/>AKBAR
        </h1>
        
        <div class="flex flex-col gap-6 lg:gap-12">
            <div class="flex flex-col lg:flex-row items-start lg:items-center justify-between gap-6 lg:gap-8 min-h-0 lg:min-h-[calc(100vh-200px)] lg:justify-center">
                {# Name and title #}
                <div class="flex flex-col relative lg:flex-1">
                    <div class="hidden lg:block w-24 h-1 bg-primary mb-8 ml-1"></div>
                    <h2 class="text-5xl md:text-8xl xl:text-9xl font-bold tracking-tight text-text-main leading-[0.9] font-display">
                        MUHAMMAD<br/>
                        <span class="text-primary opacity-90">ALIF AKBAR</span>
                    </h2>
                </div>
                
                {# About card with skills and scroll indicator #}
                <div class="flex flex-col max-w-md self-center lg:flex-1 lg:flex lg:justify-end">
                    <div class="bg-white/60 backdrop-blur-md border border-white/80 p-6 md:p-8 rounded-[1.5rem] shadow-xl shadow-primary/5 relative overflow-hidden group">
                        <div class="absolute top-0 right-0 opacity-10 group-hover:opacity-20 transition-opacity">
                            <span class="material-symbols-outlined text-[100px] text-primary">fingerprint</span>
                        </div>
                        <div class="flex items-center gap-3 mb-4">
                            <span class="material-symbols-outlined text-primary">verified_user</span>
                            <h3 class="text-sm font-bold uppercase tracking-widest text-text-muted">{{ site.pages.home.about.title }}</h3>
                        </div>
                        <p class="text-lg text-text-main font-medium leading-relaxed">
                            {{ site.title }}.
                        </p>
                        <p class="text-text-muted text-base mt-2 leading-relaxed">
                            {{ site.author.bio }}
                        </p>
                        {# Skills Stack from config #}
                        <div class="mt-6 pt-6 border-t border-stone-200">
                            <span class="text-[10px] uppercase tracking-wider text-text-muted font-bold">{{ site.pages.home.about.stack_label }}</span>
                            <div class="w-full flex flex-wrap gap-2 mt-2">
                                {% for skill in site.skills %}
                                <span class="px-2 py-1 bg-stone-100 rounded text-xs text-text-muted font-medium">{{ skill }}</span>
                                {% endfor %}
                            </div>
                        </div>
                        
                        {# Scroll Indicator Button (Desktop only hint) #}
                        <div class="hidden lg:flex mt-8 justify-center">
                            <button onclick="document.getElementById('explore-section').scrollIntoView({ behavior: 'smooth' })"
                                    class="flex flex-col items-center gap-2 group/scroll text-text-muted hover:text-primary transition-colors cursor-pointer">
                                <span class="text-[10px] uppercase font-bold tracking-[0.2em] opacity-60 group-hover/scroll:opacity-100">{{ site.pages.home.hero.scroll_hint }}</span>
                                <div class="p-2 rounded-full border border-stone-200 group-hover/scroll:border-primary transition-all duration-300">
                                    <span class="material-symbols-outlined text-sm font-bold animate-bounce mt-1">keyboard_double_arrow_down</span>
                                </div>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

{# Explore Section #}
<section class="w-full max-w-[1400px] mb-24 lg:mb-32 scroll-mt-32" id="explore-section">
    <div class="flex flex-col gap-10">
        <div class="flex items-center gap-4 mb-4">
            <div class="p-3 rounded-full bg-primary/10 text-primary">
                <span class="material-symbols-outlined text-3xl">grid_view</span>
            </div>
            <h3 class="text-3xl font-bold text-text-main font-display">{{ site.pages.home.explore.title }}</h3>
        </div>
        
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            {# Blog Card #}
            <a class="group relative flex flex-col justify-between min-h-[380px] bg-white rounded-[2.5rem] p-8 md:p-10 overflow-hidden border border-white shadow-xl shadow-primary/5 hover:shadow-2xl hover:shadow-primary/15 transition-all duration-500 hover:-translate-y-2"
               href="/blog/">
                <div class="absolute top-8 right-8 bg-[#F5EFEB] rounded-full p-3 opacity-0 translate-y-4 group-hover:opacity-100 group-hover:translate-y-0 transition-all duration-500 ease-out z-20">
                    <span class="material-symbols-outlined text-text-main">north_east</span>
                </div>
                <div class="relative z-10 mt-auto">
                    <div class="inline-flex items-center gap-2 px-3 py-1 rounded-full bg-stone-100 text-stone-600 text-xs font-bold uppercase tracking-wider mb-6 border border-stone-200">
                        <span class="material-symbols-outlined text-sm">edit_note</span>
                        {{ site.pages.home.explore.blog.label }}
                    </div>
                    <h4 class="text-3xl md:text-4xl font-bold text-text-main mb-3 group-hover:text-stone-600 transition-colors font-display">
                        {{ site.pages.home.explore.blog.title | replace(" ", "<br/>") | safe }}
                    </h4>
                    <p class="text-text-muted text-base leading-relaxed max-w-[90%]">
                        {{ site.pages.home.explore.blog.description }}
                    </p>
                </div>
                <div class="absolute -bottom-24 -left-24 w-80 h-80 bg-stone-200/60 rounded-full blur-[80px] group-hover:bg-stone-300/60 transition-all duration-700"></div>
            </a>
            
            {# Experience Card #}
            <a class="group relative flex flex-col justify-between min-h-[380px] bg-white rounded-[2.5rem] p-8 md:p-10 overflow-hidden border border-white shadow-xl shadow-primary/5 hover:shadow-2xl hover:shadow-primary/15 transition-all duration-500 hover:-translate-y-2"
               href="/experience/">
                <div class="absolute top-8 right-8 bg-[#F5EFEB] rounded-full p-3 opacity-0 translate-y-4 group-hover:opacity-100 group-hover:translate-y-0 transition-all duration-500 ease-out z-20">
                    <span class="material-symbols-outlined text-text-main">north_east</span>
                </div>
                <div class="relative z-10 mt-auto">
                    <div class="inline-flex items-center gap-2 px-3 py-1 rounded-full bg-amber-100 text-amber-700 text-xs font-bold uppercase tracking-wider mb-6 border border-amber-200">
                        <span class="material-symbols-outlined text-sm">history_edu</span>
                        {{ site.pages.home.explore.experience.label }}
                    </div>
                    <h4 class="text-3xl md:text-4xl font-bold text-text-main mb-3 group-hover:text-amber-700 transition-colors font-display">
                        {{ site.pages.home.explore.experience.title | replace(" ", "<br/>") | safe }}
                    </h4>
                    <p class="text-text-muted text-base leading-relaxed max-w-[90%]">
                        {{ site.pages.home.explore.experience.description }}
                    </p>
                </div>
                <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-64 h-64 bg-amber-100/60 rounded-full blur-[80px] group-hover:bg-amber-200/60 transition-all duration-700"></div>
            </a>
        </div>
    </div>
</section>

{# Final CTA Section #}
<section class="w-full max-w-[1400px] mb-24">
    <div class="w-full h-[400px] md:h-[500px] rounded-[2rem] md:rounded-[3rem] overflow-hidden relative group shadow-2xl shadow-primary/10 border-4 border-white bg-[#1c1917]">
        {# Abstract background for CTA #}
        <img alt="Abstract Connection" 
             class="w-full h-full object-cover opacity-40 group-hover:scale-105 transition-all duration-1000 ease-in-out"
             src="https://images.unsplash.com/photo-1451187580459-43490279c0fa?w=1600&q=80" />
        
        <div class="absolute inset-0 bg-gradient-to-t from-[#1c1917] via-transparent to-transparent"></div>
        
        <div class="absolute inset-0 flex flex-col items-center justify-center text-center px-6">
            <h2 class="text-4xl md:text-6xl font-display font-bold text-white tracking-tight mb-8">
                {{ site.pages.home.cta.title | replace(" ", "<br/>") | safe }}
            </h2>
            
            {# Social Icons in Call to Action #}
