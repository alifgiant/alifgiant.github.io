                </a>
                {% endif %}
                {% if site.social.linkedin %}
                <a aria-label="LinkedIn" 
                   class="size-12 rounded-full bg-white/10 flex items-center justify-center text-white hover:bg-[#0077b5] transition-all duration-300 transform hover:scale-110" 
                   href="{{ site.social.linkedin }}" target="_blank" rel="noopener">
