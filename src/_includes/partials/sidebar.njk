{# Social Sidebar - Fixed right side social links #}
<div class="fixed right-8 top-1/2 -translate-y-1/2 z-40 hidden xl:flex flex-col gap-8 items-center">
    <div class="h-16 w-[1px] bg-gradient-to-b from-transparent to-stone-400"></div>
    <a aria-label="Github" 
       class="text-stone-400 hover:text-primary hover:scale-110 transition-all duration-300 p-2" 
       href="{{ site.social.github }}" target="_blank" rel="noopener">
        <span class="material-symbols-outlined text-2xl">code</span>
    </a>
    <a aria-label="LinkedIn" 
       class="text-stone-400 hover:text-primary hover:scale-110 transition-all duration-300 p-2" 
       href="{{ site.social.linkedin }}" target="_blank" rel="noopener">
        <span class="material-symbols-outlined text-2xl">work</span>
    </a>
    <a aria-label="Twitter" 
       class="text-stone-400 hover:text-primary hover:scale-110 transition-all duration-300 p-2" 
       href="{{ site.social.twitter }}" target="_blank" rel="noopener">
        <span class="material-symbols-outlined text-2xl">alternate_email</span>
    </a>
    <div class="h-16 w-[1px] bg-gradient-to-t from-transparent to-stone-400"></div>
</div>
