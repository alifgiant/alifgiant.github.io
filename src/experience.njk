---
layout: layouts/base.njk
title: Experience
permalink: /experience/
---

{# Header Section - using config values #}
<div class="mb-16">
    <h1 class="text-4xl md:text-5xl font-bold mb-6 text-text-main tracking-tight font-display">{{ site.pages.experience.title }}</h1>
    <p class="text-text-muted text-lg leading-relaxed max-w-2xl">
        {{ site.pages.experience.subtitle }}
    </p>
    <div class="h-1.5 w-16 bg-gradient-to-r from-primary to-primary/50 mt-8 rounded-full"></div>
</div>

{# Timeline #}
<div class="relative space-y-16 pl-2 md:pl-0">
    {# Timeline line #}
    <div class="absolute left-[19px] top-6 bottom-0 w-[2px] bg-stone-200 z-0"></div>
    
    {% for exp in collections.experiences %}
        <div class="relative md:pl-16 pl-12 group">
            {# Timeline dot #}
            <div class="absolute left-[10px] top-1.5 h-5 w-5 rounded-full bg-white border-4 {% if exp.data.current %}border-primary{% else %}border-stone-300 group-hover:border-primary{% endif %} z-10 shadow-sm transition-transform group-hover:scale-110"></div>
            
            {# Company header #}
            <div class="mb-8">
                <h2 class="text-2xl font-bold text-text-main font-display">{{ exp.data.company }}</h2>
                <div class="flex flex-wrap items-center gap-x-3 gap-y-1 text-base mt-1.5">
                    <span class="font-medium text-primary">{{ exp.data.role }}</span>
                    <span class="text-text-muted text-xs">•</span>
                    <span class="text-text-muted text-sm">{{ exp.data.period }}</span>
                </div>
            </div>
            
            {# Project/Achievement cards #}
            <div class="space-y-6">
                {% if exp.data.projects %}
                    {% for project in exp.data.projects %}
                        <div class="bg-white/70 backdrop-blur-md border border-white/50 shadow-sm p-6 rounded-2xl hover:shadow-md transition-all duration-300 hover:bg-white/90">
                            <div class="flex flex-col md:flex-row md:justify-between md:items-baseline mb-4">
                                <h3 class="text-lg font-bold text-text-main">{{ project.title }}</h3>
                                {% if project.tag %}
                                    <span class="text-xs font-semibold text-primary mt-2 md:mt-0 px-3 py-1 bg-primary/10 rounded-full w-fit">{{ project.tag }}</span>
                                {% endif %}
                            </div>
                            {% if project.description %}
                                <p class="text-text-muted text-sm italic mb-4">{{ project.description }}</p>
                            {% endif %}
                            <ul class="space-y-3 text-text-muted list-none text-sm leading-relaxed">
                                {% for item in project.achievements %}
                                    <li class="flex items-start gap-2">
                                        <span class="material-symbols-outlined text-base text-primary mt-0.5 shrink-0">check_small</span>
                                        <span>{{ item | safe }}</span>
                                    </li>
                                {% endfor %}
                            </ul>
                        </div>
                    {% endfor %}
                {% else %}
                    {# Fallback for simple experience entries without projects #}
                    <div class="bg-white/70 backdrop-blur-md border border-white/50 shadow-sm p-6 rounded-2xl">
                        <div class="text-text-muted leading-relaxed mb-4">
                            {{ exp.content | safe }}
                        </div>
                        {% if exp.data.skills %}
                            <div class="flex flex-wrap gap-2">
                                {% for skill in exp.data.skills %}
                                    <span class="px-3 py-1 bg-stone-100 border border-stone-200 rounded-full text-xs font-semibold text-text-muted uppercase tracking-wider">{{ skill }}</span>
                                {% endfor %}
                            </div>
                        {% endif %}
                    </div>
                {% endif %}
            </div>
        </div>
    {% endfor %}
    
    {# Career Started marker #}
    <div class="relative md:pl-16 pl-12 group">
        <div class="absolute left-[10px] top-1.5 h-5 w-5 rounded-full bg-white border-4 border-stone-300 z-10 shadow-sm"></div>
        
        {# Career start header #}
        <div class="mb-4">
            <h2 class="text-2xl font-bold text-text-main font-display">Career Started</h2>
            <div class="flex flex-wrap items-center gap-x-3 gap-y-1 text-base mt-1.5">
                <span class="font-medium text-primary">Bachelor's Degree in Informatics Engineering</span>
                <span class="text-text-muted text-xs">•</span>
                <span class="text-text-muted text-sm">Telkom University, 2013 - 2017</span>
            </div>
        </div>
    </div>
</div>

{# Spacing before CTA #}
<div class="mt-24"></div>

{# CTA Section (use same as home) #}
<section class="w-full max-w-[1400px] mb-24">
    <div class="w-full h-[400px] md:h-[500px] rounded-[2rem] md:rounded-[3rem] overflow-hidden relative group shadow-2xl shadow-primary/10 border-4 border-white bg-[#1c1917]">
        {# Abstract background for CTA #}
        <img alt="Abstract Connection" 
             class="w-full h-full object-cover opacity-40 group-hover:scale-105 transition-all duration-1000 ease-in-out"
             src="https://images.unsplash.com/photo-1451187580459-43490279c0fa?w=1600&q=80" />
        
        <div class="absolute inset-0 bg-gradient-to-t from-[#1c1917] via-transparent to-transparent"></div>
        
        <div class="absolute inset-0 flex flex-col items-center justify-center text-center px-6">
            <h2 class="text-4xl md:text-6xl font-display font-bold text-white tracking-tight mb-8">
                {{ site.pages.home.cta.title | replace(" ", "<br/>") | safe }}
            </h2>
            
            {# Social Icons in Call to Action #}
            <div class="flex items-center gap-4 bg-white/10 backdrop-blur-md p-4 rounded-full border border-white/20">
